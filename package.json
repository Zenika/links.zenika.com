{
  "name": "links-zenika-com",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "run-p --silent --print-label hasura:start hasura:console:delay server:dev web:start",
    "hasura:start": "docker-compose up",
    "hasura:console": "npm --prefix hasura run console",
    "hasura:console:delay": "sleep 5 && npm --prefix hasura run console",
    "server:dev": "npm --prefix server run dev",
    "web:start": "npm --prefix web start -- --open",
    "prettier": "prettier **.{yml,yaml,js,jsx,json}",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  }
}
